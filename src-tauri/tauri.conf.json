{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NetNote",
  "version": "1.0.0",
  "identifier": "com.netnote.app",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/inferis995/netnote/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2QUE4N0Y4MjFDMDM4MUIKUldRYk9NQWgrSWVxTnQ4YnFBMGdQOHMrNXVKa3dOQjR3bEJxYmQxVVdjMkd6S1d6ME9PRStTOTcK"
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "NetNote",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    }
  }
}